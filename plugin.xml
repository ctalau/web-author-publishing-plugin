<?xml version="1.0" encoding="UTF-8"?>
<!-- The plugin.dtd file is located in the OXYGEN_INSATALL_DIR/plugins directory -->
<!DOCTYPE plugin SYSTEM "../plugin.dtd">

<plugin
    class="ro.sync.exml.plugin.Plugin"

    id=" web-author-publishing-plugin"
    name="Web Author Publishing Plugin"
    description="A plugin for oXygen XML Web Author."
    version="${project.nosnapshot.version}"
    vendor="Syncro Soft">

  <runtime>
    <librariesFolder name="lib" />
    <library name="target/classes" />
    <librariesFolder name="target/lib" />
  </runtime>

  <!-- Add extensions here-->

  <!-- Example extensions: -->
  <extension type="WebappServlet" class="com.oxygenxml.SampleWebappServletPluginExtension"/>

  <!-- You can access static files at XML_WEB_AUTHOR/plugin-resources/ web-author-publishing-plugin/ -->
  <extension type="WebappStaticResourcesFolder" path="web/static/" href=" web-author-publishing-plugin"/>
</plugin>
